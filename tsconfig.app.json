{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "emitDeclarationOnly": false,
    "rootDir": "./src",
    "outDir": "../../dist/libs/plugin-driver", // üì¶ –æ–±—â–∏–π dist
    "tsBuildInfoFile": "../../dist/libs/plugin-driver.tsbuildinfo", // ‚úÖ —É–Ω–∏–∫–∞–ª—å–Ω—ã–π build cache
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": "../../", // ‚úÖ –≤–∞–∂–Ω–æ –¥–ª—è –∞–ª–∏–∞—Å–æ–≤
    "paths": {
      "@barfinex/types": [
        "libs/types/src"
      ],
      "@barfinex/utils": [
        "libs/utils/src"
      ],
      "@barfinex/utils/*": [
        "libs/utils/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../utils"
    }
  ]
}